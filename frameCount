     if(heroY > 345 - imgHeros[0].getheight())
     {
 		heroJump = false;
      heroJumpOff = -4;
    }          
    }
    else 
          heroIndex = (heroIndex + 1)%12;  
    }

    static int frameCount = 0;
    frameCount++;
    if(frameCount > 100)
    {
        frameCount = 0;
        if(!torToiseExist)
        {
			torToiseExist = true;
            torToiseY = WIN_WIDTH;
        }
	       
        
    }
           
}
